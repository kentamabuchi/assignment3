<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/6b92dd2514.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar bg-primary">
        <div class="container">
          <a class="navbar-brand text-white" href="/"><i class="fas fa-book"></i> Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <% if user_signed_in? %>
            <ul class="nav">
              <li class="nav-item">
                <i class="fas fa-home text-white"></i>
                <%= link_to "Home", user_path(current_user.id), class:"text-white" %>
              </li>
              <li class="nav-item pl-3">
                <i class="fas fa-users text-white"></i>
                <%= link_to "Users", users_path, class:"text-white" %>
              </li>
              <li class="nav-item pl-3 text-white">
                <i class="fas fa-book-open"></i>
                <%= link_to "Books", books_path, class:"text-white" %>
              </li>
              <li class="nav-item pl-3">
                <i class="fas fa-sign-out-alt text-white"></i>
                <%= link_to "logout", destroy_user_session_path, method: :delete, class:"text-white" %>
              </li>
            </ul>
            
          <% else %>
            <ul class="nav">
              <li class="nav-item">
                <i class="fas fa-home text-white"></i>
                <%= link_to "Home", '/', class:"text-white" %>
              </li>
              <li class="nav-item pl-3">
                <i class="fas fa-link text-white"></i>
                <%= link_to "About", home_about_path, class:"text-white" %>
              </li>
                <li class="nav-item pl-3">
                <i class="fas fa-user-plus text-white"></i>
                <%= link_to "sign up", new_user_registration_path, class:"text-white" %>
              </li>
              <li class="nav-item pl-3">
                <i class="fas fa-sign-in-alt text-white"></i>
                <%= link_to "login", new_user_session_path, class:"text-white" %>
              </li>
            </ul>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
