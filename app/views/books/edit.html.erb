<div class="container d-flex justify-content-center pt-5">
  <div class="row flex-column">
    <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:<br />
        <% @book.errors.full_messages.each do |message| %>
            <%= message %><br />
        <% end %>
    <% end %>
    <div class="d-block">
      <div class="form-group">
        <h1>Editing Book</h1>
        <%= form_with model:@book, local:true do |f| %>
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, class:"form-control", autofocus: true, id:"inputTitle"%>
          <label for="inputBody">Opinion</label></label>
          <%= f.text_area :body, class:"form-control" %>
          <%= f.submit "Update Book", class:"mt-3" %>
        <% end %>
      </div>
      <div class="d-block d-flex justify-content-center">
        <%= link_to "Show", book_path(@book), class:"btn btn-inline btn-primary" %>
        <%= link_to "Back", books_path, class:"btn btn-inline btn-primary ml-3" %>
      </div>
    </div>
  </div>
</div>