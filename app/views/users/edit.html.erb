<container class="d-flex justify-content-center pt-5">
  <div class="flex-column">
    <h1>User info</h1>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:<br />
      <% @user.errors.full_messages.each do |message| %>
        <%= message %><br />
      <% end %>
    <% end %>
    <div class="form-group">
      <%= form_with model:@user, local: true do |f| %>
        <label for="inputName">Name</label>
          <%= f.text_field :name, class:"form-control", autofocus: true, id:"inputName", placeholder:"名前" %>
        <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, class:"form-control", autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %>
        <div>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <label for="inputImage">ProfileImage</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <%= f.submit "Update User", class:"mt-3" %>
      <% end %>
    </div>
  </div>
</container>